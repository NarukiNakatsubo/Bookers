<div class="edit">
  
  <h1>Editing Book</h1>
  
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <%= form_with model: @book, method: :put do |f| %>
  
    <div>Title</div>
    <%= f.text_field :title %>
    
    <div>Body</div>
    <%= f.text_area :body %>
    
    <div></div>
    <%= f.submit 'Update Book' %>
    
  <% end %>
  
  <div class="show_url">
    <%=link_to "Show", @book, method: :GET %>
    <div class="separate">|</div>
    <%=link_to "Back", books_path, method: :GET %>
  </div>
  
</div>