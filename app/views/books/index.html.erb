<div class="books">
  <h1 class="index">Books</h1>
  
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td class="link"><%=link_to "Show", book_path(book.id), method: :GET %></td>
      <td class="link"><%=link_to "Edit", edit_book_path(book.id), method: :GET %></td>
      <td class="link"><%=link_to "Destroy", book_path(book.id), method: :DELETE, data: {confirm: "Are you sure?"} %></td>
    </tr>
  </tbody>
  <% end %>
</table>

  <h2>New book</h2>
  
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <div class="field">Title</div>
    <%= f.text_field :title %>
    
    <div class="field">Body</div>
    <%= f.text_area :body %>
    
    <div></div>
    <%= f.submit 'Create Book' %>
   <% end %>
   
</div>